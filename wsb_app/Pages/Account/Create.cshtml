@page
@model wsb_app.Pages.Account.CreateModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "CRM Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <h5 class="card-header bg-primary text-white">CRM Login</h5>
                <div class="card-body">
                    <p class="text-muted">Please enter your credentials to access the CRM system.</p>
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        @Html.AntiForgeryToken()
                        
                        <div class="form-group">
                            <label asp-for="FormData.Email" class="control-label">Email</label>
                            <input type="text" asp-for="FormData.Email" class="form-control" placeholder="Enter your email" />
                            <span asp-validation-for="FormData.Email" class="text-danger"></span>
                        </div>

                        <div class="text-danger">@Model.UsernameErrorMessage</div>
                        <div class="form-group">
                            <label asp-for="FormData.Username" class="control-label">Username</label>
                            <input type="text" asp-for="FormData.Username" class="form-control" placeholder="Enter your username" />
                            <span asp-validation-for="FormData.Username" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="FormData.Password" class="control-label">Password</label>
                            <input type="password" asp-for="FormData.Password" class="form-control" placeholder="Enter your password" />
                            <span asp-validation-for="FormData.Password" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Login" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>