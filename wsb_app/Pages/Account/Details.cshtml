@page
@model wsb_app.Pages.Account.DetailsModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Users</h4>
    <hr />
    @foreach (var user in Model.Users)
    {
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(x => user.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(x => user.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(x => user.UserName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(x => user.UserName)
            </dd>
            <dd class="col-sm-10">
                <a asp-page="./Edit" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
            </dd>
        </dl>
    }
    
</div>
