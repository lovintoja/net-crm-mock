@page
@model wsb_app.Pages.Account.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<h2>Account Details</h2>

<div>
    <h4>User Information</h4>
    <dl class="row">
        <dt class="col-sm-2">
            User ID:
        </dt>
        <dd class="col-sm-10">
            @Model.CurrentUser.Id
        </dd>
        <dt class="col-sm-2">
            Email:
        </dt>
        <dd class="col-sm-10">
            @Model.CurrentUser.Email
        </dd>
        <dt class="col-sm-2">
            UserName:
        </dt>
        <dd class="col-sm-10">
            @Model.CurrentUser.UserName
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id=@Model.CurrentUser.Id>Edit</a> |
</div>



